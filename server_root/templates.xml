<?xml version="1.0" encoding="UTF-8" ?>
<messages>

  <message id="gsc.template.logged-in">
    <div class="gsc-auth-logged-in">
      <strong class="username">${user-name}</strong>
      ${profile-link}
      ${log-out-link}
    </div>
  </message>

  <message id="gsc.template.not-logged-in">
    <div class="gsc-auth-not-logged-in">
      ${log-in-link}
    </div>
  </message>

  <message id="gsc.template.api-key-widget">
    <div class="api-key-widget buttons-inline">
      <input type="text"
             id="api-key-input"
             class="input-monospace"
             onclick="selectCopyId('api-key-input')"
             value="${key}"
             readonly="readonly"
      />${copy-button}${regenerate-button}
    </div>
  </message>

  <message id="gsc.template.simple-view-widget">
    <div class="simple-view-widget buttons-inline">
      ${value}${edit-button}<span style="clear: both;"></span>
    </div>
  </message>

  <message id="gsc.template.simple-edit-widget">
    <div class="simple-edit-widget buttons-inline">
      ${edit}${save-button}${cancel-button}<span style="clear: both;"></span>
    </div>
  </message>

  <message id="gsc.template.profile-table">
    <table class="profile-table">
      <colgroup/>
      <tbody>
        <tr>
          <th>NetID</th>
          <td>${login-name}</td>
        </tr>
        <tr>
          <th>Role</th>
          <td>${role}</td>
        </tr>
        <tr>
          <th>Preferred Name</th>
          <td>${call-me}</td>
        </tr>
        <tr>
          <th>API Key</th>
          <td>${api-key}</td>
        </tr>
      </tbody>
    </table>
  </message>


</messages>
